<launch>
    <!-- No namespace here as we will share this description.
       Access with slash at the beginning -->
    <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_burger.urdf.xacro" />

    <!-- BEGIN ROBOT 1-->
    <group ns="tb3_0">
        <param name="tf_prefix" value="tb3_0" />
        <include file="$(find multi_robot_system)/launch/single_robot.launch">
            <arg name="init_pose" value="-x 0.5 -y 0.5 -z 0 -Y 0" />
            <arg name="robot_name" value="tb3_0" />
        </include>
    </group>

    <!-- BEGIN ROBOT 2-->
    <group ns="tb3_1">
        <param name="tf_prefix" value="tb3_1" />
        <include file="$(find multi_robot_system)/launch/single_robot.launch">
            <arg name="init_pose" value="-x -2 -y 0.5 -z 0 -Y 0" />
            <arg name="robot_name" value="tb3_1" />
        </include>
    </group>

    <!-- BEGIN ROBOT 3-->
    <group ns="tb3_2">
        <param name="tf_prefix" value="tb3_2" />
        <include file="$(find multi_robot_system)/launch/single_robot.launch">
            <arg name="init_pose" value="-x 1 -y -2 -z 0 -Y 0" />
            <arg name="robot_name" value="tb3_2" />
        </include>
    </group>

</launch>